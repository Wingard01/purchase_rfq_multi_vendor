<odoo>
  <record id="view_purchase_order_form_multi_vendor_button" model="ir.ui.view">
    <field name="name">purchase.order.form.multi.vendor.button</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header" position="inside">
        <button name="action_view_bids" type="object" string="Bids" class="oe_stat_button"/>
      </xpath>
    </field>
  </record>
    <record id="view_purchase_order_form_multi_vendor" model="ir.ui.view">
        <field name="name">purchase.order.form.multi.vendor</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="vendor_ids" widget="many2many_tags"/>
            </xpath>

        </field>
    </record>
</odoo>
